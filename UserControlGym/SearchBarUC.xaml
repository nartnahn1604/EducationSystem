<UserControl x:Class="IT008_UIT.UserControlGym.SearchBarUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:IT008_UIT.UserControlGym"
             mc:Ignorable="d" 
             x:Name="ucSearchBar"
             DataContext="{StaticResource SearchBarVM}"
             d:DesignHeight="120" d:DesignWidth="1280">
    <Grid>
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0">
                    <StackPanel Orientation="Horizontal" materialDesign:RippleAssist.IsCentered="True">
                        <materialDesign:ColorZone Mode="Standard"  Padding="8 4 8 4" CornerRadius="10" Panel.ZIndex="1" Margin="16 0 0 0"
                                                          materialDesign:ShadowAssist.ShadowDepth="Depth1" Width="1230" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Style="{DynamicResource MaterialDesignToolButton}"
                                    Command="{Binding SearchCommand}"
                                     CommandParameter="{Binding ElementName=ucSearchBar}">
                                    <materialDesign:PackIcon Kind="Magnify" Opacity=".56" />
                                </Button>
                                <TextBox
                                    Grid.Column="1"
                                    Margin="8 0 0 0"
                                    materialDesign:HintAssist.Hint="Search..."
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    BorderThickness="0"
                                    MinWidth="200"
                                    VerticalAlignment="Center"
                                    Text="{Binding SearchingContent, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </materialDesign:ColorZone>
                    </StackPanel>
                </DockPanel>
                <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="0 10 0 0" Height="30">
                    <Button  Background="#00ADB5"  HorizontalAlignment="Left" Margin="15 0 0 0" x:Name="testbtn"
                        Style="{DynamicResource MaterialDesignRaisedButton}" Width="100" Height="30" 
                             materialDesign:ShadowAssist.ShadowDepth="Depth2" >
                        +Thêm
                    </Button>
                    
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>
